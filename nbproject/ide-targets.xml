<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="Supremica-IDE">
    <import file="../build.xml"/>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/41/freeform-config.html#debugj2se) -->
    <target name="debug-nb">
        <nbjpdastart addressproperty="jpda.address" name="Supremica" transport="dt_socket">
            <classpath>
                <pathelement location="${dist}/Supremica.jar"/>
                <pathelement location="${dist}/SupremicaLib.jar"/>
                <pathelement path="${java.class.path}"/>
            </classpath>
        </nbjpdastart>
        <java classname="${supremica_basepackage}.gui.ide.IDE" fork="yes">
            <classpath>
                <pathelement location="${dist}/Supremica.jar"/>
                <pathelement location="${dist}/SupremicaLib.jar"/>
                <pathelement path="${java.class.path}"/>
            </classpath>
            <!--
		<assertions>
			 <enable/>
		</assertions>		 
-->
            <jvmarg value="-Xdebug"/>
            <jvmarg value="-Xnoagent"/>
            <jvmarg value="-Djava.compiler=none"/>
            <jvmarg value="-Xrunjdwp:transport=dt_socket,address=${jpda.address}"/>
        </java>
    </target>
</project>
